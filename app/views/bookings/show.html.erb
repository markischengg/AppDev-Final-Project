<div>
  <div>
    <h1>
      Booking #<%= @the_booking.id %> details
    </h1>

    <div>
      <div>
        <a href="/bookingschedule/<%= @the_booking.time%>">
          Go back
        </a>
      </div>

    </div>

    <dl>

      <dt>
        Name
      </dt>
      <dd>
        <%= @the_booking.user.first_name%> 
      </dd>

      <dt>
        Date
      </dt>
      <dd>
        <%= @the_booking.time.strftime("%m/%d/%Y") %> 
      </dd>

      <dt>
        Time
      </dt>
      <dd>
        <%= @the_booking.time.strftime("%H:%M") %> <%= @the_booking.time.strftime("%p") %>
      </dd>

      <dt>
        Duration
      </dt>
      <dd>
        <%= @the_booking.duration %>
      </dd>

    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit booking
    </h2>

    <form action="/modify_booking/<%= @the_booking.id %>"  method="post" >
      <div>
        <label for="time_box">
          Time
        </label>

        <input type="datetime-local" id="time_box" name="query_time"
         value="<%= @the_booking.time %>">
      </div>

      <div>
        <label for="duration_box">
          Duration
        </label>

        <input type="text" id="duration_box" name="query_duration" value="<%= @the_booking.duration %>">
      </div>

      <button>
        Update booking
      </button>
    </form>
  </div>
</div>

<hr>
